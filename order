package com.company;

public class Order {
    //Class Level Variables - Protect the data
    private int orderId = 0;
    private Customer cust;
    private String orderMenuItem;
    private double orderMenuPrice;

    //Constructor Method
    public Order(String _orderMenuItem, double _orderMenuPrice){
        orderId++;
        this.orderMenuItem = _orderMenuItem;
        this.orderMenuPrice = _orderMenuPrice;
    }
    public Order(){
        orderId++;
    }
    //Setters and Getters
    public int getorderId() { return orderId; }
    public void setorderId(int _orderId) {this.orderId = _orderId;}

    public String getOrderMenuItem() { return orderMenuItem; }
    public void setOrderMenuItem(String _orderMenuItem) {this.orderMenuItem = _orderMenuItem;}

    public double getorderMenuPrice() { return orderMenuPrice;}
    public void setOrderMenuPrice(double _orderMenuPrice) {this.orderMenuPrice=_orderMenuPrice;}


}
